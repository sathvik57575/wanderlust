<% layout('layouts/boilerplate.ejs') %>

    <body>
        <div class="row">
            <div class="col-8 offset-2">

                <h3>Edit details</h3>

                <form action="/listings/<%= thisListing.id %>/edit?_method=PUT" method="post" novalidate class="needs-validation" enctype="multipart/form-data">

                    <div class="mt-2">
                        <label for="title" class="form-label">Title:</label>
                        <input type="text" name="listing[title]" id="title" class="form-control"
                            value="<%= thisListing.title %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter a catchy title
                        </div>
                    </div>

                    
                    <div class="mt-2">
                        <label for="description" class="form-label">Description:</label>
                        <textarea name="listing[description]" id="description"
                            class="form-control" required><%= thisListing.description %></textarea>
                    </div>

                    
                    <div class="mt-2">
                        <img src="<%= originalPreview %>" alt="" style="max-width: 250px ;">
                    </div>
                    <div class="mt-2">
                        <label for="image" class="form-label">Image:</label>
                        <input type="file" name="listing[image]" class="form-control" id="image">
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            Enter a valid image link
                        </div>
                    </div>

                    <div class="mt-2 row">
                        <div class="col-md-4">
                            <label for="price" class="form-label">Price:</label>
                            <input type="number" name="listing[price]" class="form-control" id="price"
                                value="<%= thisListing.price %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Enter a valid price
                            </div>
                        </div>
                        <div class="col-md-8">
                            <label for="country" class="form-label">country:</label>
                            <input type="text" name="listing[country]" class="form-control" id="country"
                                value="<%= thisListing.country %>" required>
                            <div class="valid-feedback">
                                Looks good!
                            </div>
                            <div class="invalid-feedback">
                                Country name should be valid
                            </div>
                        </div>
                    </div>

                    <div class="mt-2">
                        <label for="location" class="form-label">location:</label>
                        <input type="text" name="listing[location]" class="form-control" id="location"
                            value="<%= thisListing.location %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                        <div class="invalid-feedback">
                            location should be valid
                        </div>
                    </div>
                    <br>
                    <button class="btn btn-danger">Save</button>
                </form>
            </div>
        </div>
    </body>