<%- layout('layouts/boilerplate.ejs') %>

    <body>

        <h3>
            <%= thisListing.title %>
        </h3>

        <form action="/booking/<%= thisListing._id %>" method="post" class="needs-validation" novalidate>
            <div class="row">

                <div class="mt-3">
                    <img src="<%= thisListing.image.url %>" alt="" style="width: 15rem;">
                </div>

                <div class="mt-3 col-md-6">
                    <label for="start" class="form-label">Start Date:</label>
                    <input type="date" name="start" id="start" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a start date
                    </div>
                </div>

                <div class="mt-3 col-md-6">
                    <label for="end" class="form-label">End Date:</label>
                    <input type="date" name="end" id="end" class="form-control" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a end date
                    </div>
                </div>

                <div class="mt-3 col-md-6">
                    <label for="payment" class="form-label">Payment Method</label>
                    <select name="paymentMethod" id="payment" class="form-select" required>
                        <option value="cash">Cash</option>
                        <option value="card">Card</option>
                        <option value="upi">UPI</option>
                    </select>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                    <div class="invalid-feedback">
                        Enter a payment method
                    </div>
                </div>
            </div>

            <button type="submit" class="btn btn-primary mt-3">Confirm Booking</button>
        </form>
    </body>