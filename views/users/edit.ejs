<% layout('layouts/boilerplate')  %>

<div class="row">
    <div>
        <h4 class="mt-3">User Details</h4>
        <form action="/user/edit" method="post" class="needs-validation" novalidate>
            
            <div class="mt-3">
                <label for="username" class="form-label">Username:</label>
                <input type="text" name="username" id="username" class="form-control"
                    value="<%= thisUser.username %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mt-3">
                <label for="email" class="form-label">Email:</label>
                <input type="email" name="email" id="email" class="form-control"
                    value="<%= thisUser.email %>" required>
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mt-3">
                <label for="oldpassword" class="form-label">Old Password:</label>
                <input type="password" name="oldpassword" id="oldpassword" class="form-control"
                    placeholder="Enter your previous password">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <div class="mt-3">
                <label for="newpassword" class="form-label">New Password:</label>
                <input type="password" name="newpassword" id="newpassword" class="form-control"
                    placeholder="Enter your previous password">
                <div class="valid-feedback">
                    Looks good!
                </div>
            </div>

            <button class="btn btn-success mt-4">Save changes</button>
        </form>
    </div>
</div>